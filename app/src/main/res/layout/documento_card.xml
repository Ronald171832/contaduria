<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <View
            android:id="@+id/linea"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:background="#ffd5d5d5" />

        <ImageView
            android:id="@+id/cardImagenDocumento"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/cargando"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIconCateg"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ico" />

            <TextView
                android:id="@+id/cardTituloDocumento"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Large Text"
                android:textColor="@color/colorNegro"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:visibility="invisible"
                android:id="@+id/cardDescripcionDocumento"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Link de Descarga:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/card_Descarga_Documento"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:background="@drawable/file" />

            <TextView
                android:id="@+id/cardDescargas"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Descargas: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>