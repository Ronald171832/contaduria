<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardCategoriaTituloCortado"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/colorBlanco"
                    android:textSize="80dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardCategoriaTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:background="@color/colorNegroBajo"
                    android:gravity="center"
                    android:text="Crear Categoria"
                    android:textColor="@color/colorBlanco"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_categoria"
                android:background="@color/colorPlomoBajo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView

                    android:id="@+id/cardCategoriaFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="Fecha: "
                    android:textColor="@color/colorNegro"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/cardCategoriaVisitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Visitas:      "
                    android:textColor="@color/colorNegro"
                    android:textSize="12dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>