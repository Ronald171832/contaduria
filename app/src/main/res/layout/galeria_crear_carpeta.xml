<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GaleriaDeImagenes.GaleriaSubirImagenes">



    <android.support.v4.view.ViewPager
        android:visibility="gone"
        android:background="@drawable/add_picture"
        android:onClick="elegirImagenesGaleria"
        android:id="@+id/vpImagenesPublicacion"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <ImageView
        android:onClick="elegirImagenesGaleria"
        android:visibility="visible"
        android:background="@drawable/add_picture"
        android:id="@+id/iv_galeria"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Spinner
        android:id="@+id/sp_Categorias"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </Spinner>

    <Button
        android:textColor="@color/colorBlanco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARGAR Publicacion"
        android:textSize="18dp"
        android:background="@color/colorPrimary"
        android:onClick="subirImagenPublicacion"/>


</LinearLayout>
