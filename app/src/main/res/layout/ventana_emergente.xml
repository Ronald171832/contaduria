<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_cuadrado"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTitulo_ventana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Titulo"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_nombre_ventana_emergente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Ingresar...."
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="@color/colorNegro"
        android:textSize="20dp" />

    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/bt_ventana_emergente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="GUARDAR"
        android:textColor="@color/colorBlanco"
        android:textSize="20dp" />
</LinearLayout>