<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/layout_cuadrado"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SELECCIONE OPCION :"
                android:textAlignment="center"
                android:textColor="@color/colorNegro"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:padding="20dp"
                        android:id="@+id/imgEliminarFP"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:srcCompat="@drawable/eliminar" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eliminar Foto"

                        android:textAlignment="center"
                        android:textColor="@color/colorNegro" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSelectFP"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="35dp"
                        app:srcCompat="@drawable/gallery" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar desde Galeria"
                        android:textAlignment="center"
                        android:textColor="@color/colorNegro" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>